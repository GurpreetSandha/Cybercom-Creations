<?php
class calculator{
    public $a,$b,$c;

    function sum()
    {
    $this ->c = $this ->a +$this ->b;
    return $this->c;
    }

    function sub()
    {
    $this ->c= $this->a - $this ->b;
    return $this ->c;
    }
}

$c1= new calculator();
$c1->a=20;
$c1->b=30;

echo "Sum value of C1 : ".$c1->sum()."\n";

$c2= new calculator();
$c2->a =200;
$c2 ->b= 100;

echo "Subtraction value of C2 :" .$c2->sub();
<?php

OUTPUT:

Sum value of C1 : 50  Subtraction value of C2 :100
